<link rel="stylesheet" href="css/home.css">
<script src="js/home.js"></script>

<div class="container">
    <p>Todo</p>
    <div>
        <div>
            <form action="/todo/create" method="POST">
                <textarea name="title" id="" cols="20" rows="10" required placeholder="Type Here to add ..."></textarea>
                <input type="submit" value="Add">
            </form>
        </div>
        <div>
            Todo List -
            <br>
            <ul>
                <%for(post of notCompletedTasks){%>
                    <li id="<%= post._id %>">
                        <input type="checkbox" class="unchecked-box">
                        <p><%=post.title %></p>
                        <!-- <a class="delete-post-button" href="/todo/delete/<%=post.id%>">Delete</a>
                        <a class="update-post-button" href="/todo/update/<%=post.id%>">Update</a> -->
                        <button type="submit" class="delete-task">Delete </button>
                    </li>
                <%}%>
            </ul>
            Done Tasks -
            <br>
            <ul>
                <%for(post of completedTasks){%>
                    <li id="<%= post._id %>">
                        <input type="checkbox" checked="true" class="checked-box">
                        <p><%=post.title %></p>
                        <!-- <a class="delete-post-button" href="/todo/delete/<%=post.id%>">Delete</a>
                        <a class="update-post-button" href="/todo/update/<%=post.id%>">Update</a> -->
                        <button type="submit" class="delete-task">Delete</button>
                    </li>
                <%}%>
            </ul>
        </div>
    </div>
</div>
    
